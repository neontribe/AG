<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}OAG Toolbox{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <h1>{% block h1 %}OAG Toolbox{% endblock %}</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div id="menu" style='padding-bottom: 30px'>
            {% block menu %}
                <a href="{{ path('app_index') }}">Home</a> | <a href="{{ path('oagfile_upload') }}">Upload file</a>
            {% endblock %}
        </div>

        <div id="content">
        {% block body %}{% endblock %}
    </div>

    {% block javascripts %}
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
</body>
</html>