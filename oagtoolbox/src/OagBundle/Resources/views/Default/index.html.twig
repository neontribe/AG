{# This inherrites from /app/Resources/views/base.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tool POCs{% endblock %}

{% block h1 %}Page Title{% endblock %}

{% block body %}

    <table border="1">
        <tr>
            <th>File</th><th>Process with...</th>
        </tr>
        <tr>
            {% for id, file in files %}
            <tr>
                <td>{{ file['file'] }}</td>
                <td>
                    {% for modifier in file['modifiers'] %}
                        <a href="{{ path(modifier['linkAttribute'], { 'fileid': id }) }}">{{ modifier['linkName'] }}</a>
                    {% endfor %}
                </td>
                <td>
                    {% if file['xml'] is defined %}
                        <a href="{{ path('download_file', { 'fileid': id }) }}">XML</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tr>
    </table>

{% endblock %}
